<Window x:Class="MadsKristensen.AddAnyFile.FileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new file" Height="125" Width="431" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="txtName" Height="23" Margin="100,0,100,45" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        <Label Name="lblFolder" Content="Folder name:" HorizontalAlignment="Left" Margin="10,0,0,45" VerticalAlignment="Bottom" Height="26" FontWeight="SemiBold"/>
        <Button Content="Add file" HorizontalAlignment="Right" Margin="0,0,15,45" VerticalAlignment="Bottom" Width="75" Height="23" IsDefault="True" Name="btnCreate" Click="Button_Click"/>
        <Label Name="lblTips"  Content="Tips" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Bottom" Foreground="#FF5B5B5B" Height="26" FontSize="11"/>

    </Grid>
</Window>
